<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".televisor"
    tools:showIn="@layout/app_bar_televisor">

    <TextView
        android:id="@+id/txt_televisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="TELEVISOR"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:id="@+id/key_input"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="INPUT"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/on_off"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_televisor" />

    <Button
        android:id="@+id/fwd"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/foward"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next" />

    <Button
        android:id="@+id/rew"
        android:layout_width="30dp"
        android:layout_height="15sp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rewind"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prev" />

    <Button
        android:id="@+id/stop"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/stop"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/puase"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/next"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/stop"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/prev"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="108dp"
        android:background="@drawable/prev"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/play"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fwd"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/rew"
        app:layout_constraintTop_toBottomOf="@+id/stop" />

    <Button
        android:id="@+id/puase"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/pause"
        android:fontFamily="@font/roboto_thin"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/prev"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/on_off"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/roboto_thin"
        android:text="ON/OFF"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_televisor" />

    <Button
        android:id="@+id/key_red"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/key_green"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toEndOf="@+id/key_red"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/key_yellow"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toEndOf="@+id/key_green"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/key_yellow2"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toEndOf="@+id/key_yellow"
        tools:layout_editor_absoluteY="197dp" />

</android.support.constraint.ConstraintLayout>